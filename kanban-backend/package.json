{
  "name": "kanban-backend",
  "version": "0.0.1",
  "description": "todo app with kanban board",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/index.js",
    "tsc": "rm -rf build && tsc",
    "build": "npm install && rm -rf build && tsc && cd ../kanban-frontend && npm install && npm run build && mv build frontend && cp -r frontend ../kanban-backend/build && rm -rf frontend",
    "dev": "cross-env NODE_ENV=development ts-node-dev index.ts",
    "lint": "eslint --ext .ts .",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --coverage --detectOpenHandles --forceExit",
    "dev:migration-rollback": "cross-env NODE_ENV=development ts-node-dev src/utils/migrationTools/rollbackMigration.ts",
    "dev:run-migrations": "cross-env NODE_ENV=development ts-node-dev src/utils/migrationTools/runMigrations.ts",
    "prod:migration-rollback": "cross-env NODE_ENV=production node build/src/utils/migrationTools/rollbackMigration.js",
    "prod:run-migrations": "cross-env NODE_ENV=production node build/src/utils/migrationTools/runMigrations.js"
  },
  "author": "juboskar",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.1",
    "prettier": "3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "pg": "^8.11.0",
    "sequelize": "^6.32.0",
    "sequelize-typescript": "^2.1.5",
    "umzug": "^3.2.1"
  },
  "jest": {
    "globalSetup": "./test/config/setup.ts",
    "testEnvironment": "node",
    "preset": "ts-jest",
    "modulePathIgnorePatterns": [
      "build"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  }
}
